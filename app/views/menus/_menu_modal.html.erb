<div class="modal fade" id="menu-modal-<%= menu.id %>" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">

    <div class="modal-content mx-auto">
      <div class="modal-header">
        <h6 class="modal-title"><%= menu.date.strftime("%Y年%-m月%-d日") %></h6>
        <button class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <div class="mx-auto d-table"><%= attachment_image_tag menu, :menu_image, size: "450x300" %></div>
        <div class="p-2">
          <div class="d-flex">
            <div>-<%= menu.category %>-</div>
            <div class="ml-auto">
              <%= link_to edit_menu_path(menu) do %>
                <i class="fas fa-edit h5 mr-2 text-secondary"></i>
              <% end %>
              <%= link_to menu_path(menu), method: :delete, data: {confirm: "削除しますか？"} do %>
                <i class="fas fa-trash-alt h5 text-secondary"></i>
              <% end %>
            </div>
          </div>
          <!--フォームから登録されたメニューリスト＋レシピ名を表示-->
          <div class="pt-2">
            <% menu.menu_recipes.each do |menu_recipe| %>
              <div>
                <%= link_to recipe_path(menu_recipe.recipe) do %>
                  <%= "・#{menu_recipe.recipe.name}" %>
                  <i class="fas fa-external-link-alt"></i>
                <% end %>
              </div>
            <% end %>
            <div class="d-flex flex-wrap"><%= safe_join(menu.list.split("\n"),tag(:br)) %></div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
