<div class="container">
  <div class="row">
    <%= render "layouts/page_title", title: "マイメニュー" %>

    <div class="col-10 offset-1">
      <div class="d-flex flex-wrap">
        <% if @menus.present? %>
          <% @menus.each do |menu| %>
            <div class="mx-2 bg-white p-2 mb-3 border" style="width: 290px;">
              <%= link_to menu_path(menu) do %>
                <div><%= attachment_image_tag menu, :menu_image, size: "270x200" %></div>
              <% end %>
              <div class="p-2">
                <div class="d-flex">
                  <div><%= menu.date.strftime("%Y年%-m月%-d日") %></div>
                  <div class="ml-auto">
                    <%= link_to edit_menu_path(menu) do %>
                      <i class="fas fa-edit h5 mr-2 text-secondary"></i>
                    <% end %>
                    <%= link_to menu_path(menu), method: :delete, data: {confirm: "削除しますか？"} do %>
                      <i class="fas fa-trash-alt h5 text-secondary"></i>
                    <% end %>
                  </div>
                </div>
                <div><%= menu.category %></div>
                <!--フォームから登録されたメニューリスト＋レシピ名を表示-->
                <div class="pt-2">
                  <% menu.menu_recipes.each do |menu_recipe| %>
                    <div>
                      <%= link_to recipe_path(menu_recipe.recipe) do %>
                        <%= "・#{menu_recipe.recipe.name}" %>
                        <i class="fas fa-external-link-alt"></i>
                      <% end %>
                    </div>
                  <% end %>
                  <div class="d-flex flex-wrap"><%= safe_join(menu.list.split("\n"),tag(:br)) %></div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <h3 class="d-table mx-auto">マイメニューはありません</h3>
        <% end %>
      </div>
      <div class='text-center'><%= paginate(@menus) %></div>
    </div>
  </div>
</div>
