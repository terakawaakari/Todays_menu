<div class="container">
  <div class="col-6 offset-3">
    <h2 class="my-5">会員情報編集</h2>

    <%= form_with model: @user, local: true do |f| %>
      <form class="form-horizontal">
        <div class="form-group">
          <%= f.label :name, "ユーザーネーム" %><br />
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :birth_date, "生年月日" %><br />
          <%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), prompt: "--", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :sex, "性別" %><br />
          <%= f.radio_button :sex, "男性" %>
          <%= f.label :"男性"  %>
          <%= f.radio_button :sex, "女性" %>
          <%= f.label :"女性"  %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="mx-auto d-table">
          <%= f.submit "変更", class: "btn btn-success mt-5" %>
        </div>
      </form>
    <% end %>

    <% if current_user.admin? %>
      <div class="text-right"><%= link_to "強制退会", user_path(@user), method: :delete, data: {confirm: "強制退会を実行してよろしいですか？"}, class: "btn btn-sm btn-danger" %></div>
    <% end %>

  </div>
</div>
