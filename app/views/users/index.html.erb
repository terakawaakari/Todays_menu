<div class="container">
  <div class="col-2"></div>
  <div class="col-8 offset-2">
    <h5 class="d-table" style="background-color: #e6e3de;">　会員一覧　</h5>
    <table class="table table-bordered text-center mt-5">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>ユーザーネーム</th>
          <th>生年月日</th>
          <th>性別</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to "#{user.name}", edit_user_path(user) %></td>
              <td><%= user.birth_date %></td>
              <td><%= user.sex %></td>
              <td><%= user.email %></td>
              <td><% unless user.is_deleted? %>
                    <p class="text-success">有効</p>
                  <% else %>
                    <p class="text-danger">無効</p>
                  <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
    </table>
  </div>
</div>
