<div class="container">
  <%= render "layouts/page_title", title: "会員情報確認" %>

  <div class="col-10 offset-1">

    <div class="text-right mb-2"><%= link_to "編集", edit_user_path(current_user), class: "btn btn-sm btn-outline-secondary" %></div>
    <table class="table table-bordered mb-5">
      <tbody>
        <tr>
          <th class="col-5 pl-5">ユーザネーム</th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th class="col-5 pl-5">生年月日</th>
          <td><%= current_user.birth_date %></td>
        </tr>
        <tr>
          <th class="col-5 pl-5">性別</th>
          <td><%= current_user.sex %></td>
        </tr>
        <tr>
          <th class="col-5 pl-5">メールアドレス</th>
          <td><%= current_user.email %></td>
        </tr>
      </tbody>
    </table>

  </div>
</div>