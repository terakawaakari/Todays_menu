<!DOCTYPE html>
<html>
  <head>
    <title>TodaysMenu</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/header" %>

    <main>
      <!--フラッシュメッセージの表示-->
      <% flash.each do |message_type, message| %>
        <% if message_type == "alert" %>
          <div class="fade show alert alert-danger d-flex">
            <%= content_tag :div, message %>
            <button class="close ml-auto" data-dismiss="alert"> &times; </button>
          </div>
        <% else %>
          <div class="fade show alert alert-success d-flex">
            <%= content_tag :div, message %>
            <button class="close ml-auto" data-dismiss="alert"> &times; </button>
          </div>
        <% end %>
      <% end %>
      <%= yield %>
    </main>

    <div class="mt-5"><%= render "layouts/footer" %></div>
  </body>
</html>
