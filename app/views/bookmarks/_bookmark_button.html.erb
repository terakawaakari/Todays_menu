<% if recipe.marked_by?(current_user) %>
  <div>
    <%= link_to recipe_bookmarks_path(recipe), method: :delete, remote: true do %>
      <i class="fas fa-bookmark text-secondary h4"></i>
    <% end %>
  </div>
<% else %>
  <div>
    <%= link_to recipe_bookmarks_path(recipe), method: :post, remote: true do %>
      <i class="far fa-bookmark text-secondary h4"></i>
    <% end %>
  </div>
<% end %>