<div class="container">
  <div class="row">
    <div class="d-flex mb-3 mx-auto">
      <%= render "layouts/page_title", title: "ブックマーク" %>

      <div class="mt-4 p-3 search-bg border border-secondary rounded">
        <h3>レシピ検索</h3>
        <%= search_form_for @q, url: bookmark_search_path do |f| %>
          <div><%= render "recipes/search_form", f: f %></div>
        <% end %>
      </div>
    </div>

    <div class="col-10 offset-1">

      <div class="mb-3"><%= render "recipes/tag_list", tags: @tags %></div>

      <% if @results.present? %>
        <%= render "recipes/recipe_index", recipes: @results %>
      <% else %>
        <h3 class="d-table mx-auto">該当するレシピはありません</h3>
      <% end %>

      <div class="d-table mx-auto mt-3"><%= paginate @results %></div>
    </div>
  </div>
</div>