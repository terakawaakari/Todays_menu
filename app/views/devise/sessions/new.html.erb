<div class="container">
  <div class="col-6 offset-3">
    <h2 class="my-5">ログイン</h2>

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <form class="form-horizontal">
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を保持する" %>
          </div>
        <% end %>

        <div class="actions mx-auto d-table">
          <%= f.submit "ログイン", class: "btn btn-success" %>
        </div>
      </form>
    <% end %>

    <h4 class='mt-5'>会員登録がお済みでない方</h4>
    <p class='mt-4'><%= link_to "こちら", new_user_registration_path %>から新規登録を行って下さい</p>
    </div>
</div>
