<div class="container">
  <div class="row">
    <%= render "layouts/page_title", title: "マイレシピ" %>

    <div class="col-10 offset-1">
      <div class="d-flex flex-wrap">
      <% @my_recipes.each do |recipe| %>
        <div class="mx-4">
          <div>
            <%= link_to recipe_path(recipe) do %>
              <%= attachment_image_tag recipe, :recipe_image, size: '200x150', format:'jpeg', fallback: "no_image.png" %>
            <% end %>
          </div>
          <div><%= link_to "#{recipe.name}", recipe_path(recipe) %></div>
          <div><%= recipe.category %> / <%= recipe.genre %> / <%= recipe.taste %></div>
        </div>
      <% end %>
    </div>
    </div>
  </div>

</div>