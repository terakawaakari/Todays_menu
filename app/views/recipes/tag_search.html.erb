<div class="container">
  <div class="row">

    <div class="d-flex mb-3">
      <%= render "layouts/page_title", title: "タグ検索" %>
      <div class="d-flex align-items-center ml-5 mt-5">
        <h3>#<%= @tag.tag_name %></h3>
        <h6 class="ml-2">(<%= @tag.recipes.count %>件)</h6>
      </div>
    </div>

    <div class="col-9">

      <%= render "tag_list", tags: @tags %>

      <%= render "recipe_index", recipes: @recipes %>
    </div>

    <%= render "layouts/sidebar" %>
  </div>
</div>